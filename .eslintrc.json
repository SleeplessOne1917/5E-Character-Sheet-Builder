{
  "extends": ["next/core-web-vitals", "plugin:jest-dom/recommended", "plugin:testing-library/react", "plugin:storybook/recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["testing-library", "jest-dom", "unused-imports", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
		"unused-imports/no-unused-vars": [
			"warn",
			{ "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "argsIgnorePattern": "^_" }
		]
  }
}
